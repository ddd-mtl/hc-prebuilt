{
  "name": "@ddd-qc/hc-prebuilt",
  "version": "0.601.0",
  "description": "Scripts for downloading Holochain binaries",
  "config": {
    "hc_version": "0.6.1-rc.0",
    "bin": "bin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ddd-mtl/hc-prebuilt.git"
  },
  "author": "",
  "bugs": {
    "url": "https://github.com/ddd-mtl/hc-prebuilt/issues"
  },
  "homepage": "https://github.com/ddd-mtl/hc-prebuilt#readme",
  "scripts": {
    "print-config"          : "echo config.bin: $npm_package_config_bin && echo config.hc_version: \\\"$npm_package_config_hc_version\\\"",

    "install:rust"          : "bash install-rust.sh",

    "download:hc"           : "bash download-hc.sh hc $npm_package_config_bin $npm_package_config_hc_version",
    "download:holochain"    : "bash download-hc.sh holochain $npm_package_config_bin $npm_package_config_hc_version",
    "download:kitsune"      : "bash download-hc.sh kitsune2-bootstrap-srv $npm_package_config_bin $npm_package_config_hc_version",
    "download:lair"         : "bash download-hc.sh lair-keystore $npm_package_config_bin $npm_package_config_hc_version",

    "download:hash-zome"    : "bash download-hash-zome.sh $npm_package_config_bin",

    "copy-holochain-runner" : "bash copy-holochain-runner.sh electron/bin",

    "check"                 : "$npm_package_config_bin/hc --version & $npm_package_config_bin/holochain --version",

    "dl-manual-release"     : "rm -rf release & mkdir -p release & gh release download manual-release -D release -R ddd-mtl/hc-prebuilt"
  }
}
